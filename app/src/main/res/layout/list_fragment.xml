<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NodeListFragment"
    android:paddingLeft="@dimen/len1"
    android:paddingRight="@dimen/len1">

    <Button
        android:id="@+id/add_node"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/len4"
        android:textSize="@dimen/text"
        android:textAllCaps="true"
        android:layout_marginLeft="@dimen/len1"
        android:layout_marginEnd="@dimen/len1"
        android:layout_marginBottom="@dimen/len1"
        android:text="@string/add"
        android:contentDescription="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        app:tint="@android:color/black"
        android:textColor="@color/black" />

    <FrameLayout
        android:layout_width="@dimen/len13"
        android:layout_height="@dimen/len14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/node_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>